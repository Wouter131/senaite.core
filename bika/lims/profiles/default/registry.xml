<?xml version="1.0" encoding="UTF-8"?>

<!-- Operation Definitions -->
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="senaite.core">

  <record name="bika.lims.client.default_landing_page">
    <field type="plone.registry.field.Choice">
      <default>analysisrequests</default>
      <description i18n:translate="">Select the default landing page. This is used when a Client user logs into the system, or when a client is selected from the client folder listing.</description>
      <required>True</required>
      <title i18n:translate="">Client Landing Page</title>
      <values>
        <element>analysisrequests</element>
        <element>batches</element>
      </values>
    </field>
  </record>

  <!-- Dashboard panels visibility -->
  <record name="bika.lims.dashboard_panels_visibility">
    <field type="plone.registry.field.Dict">
      <title>Dashboard panels visibility</title>
      <description>
        It is a dictionary with dashboard panel names as keys and
        strings as values. Values are strings containing the role and
        view permission for each role following this format:
        "role1,yes,role2,no,rol3,no"
      </description>
      <key_type type="plone.registry.field.TextLine" />
      <value_type type="plone.registry.field.TextLine" />
    </field>
    <value>
      <element key="analyses">null</element>
      <element key="analysisrequests">null</element>
      <element key="worksheets">null</element>
    </value>
  </record>

  <!-- Plone 5 Resources
       https://docs.plone.org/adapt-and-extend/theming/resourceregistry.html#resource-registry
  -->

  <records prefix="plone.resources/senaite-lims-jquery"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++senaite.core.static/jquery-2.2.4.min.js</value>
  </records>

  <records prefix="plone.resources/senaite-lims-jquery-migrate"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++senaite.core.static/jquery-migrate-1.4.1.min.js</value>
    <value key="deps">senaite-lims-jquery</value>
  </records>

  <records prefix="plone.resources/senaite-lims-bootstrap"
           interface="Products.CMFPlone.interfaces.IResourceRegistry">
    <value key="js">++resource++senaite.core.static/bootstrap/js/bootstrap.min.js</value>
    <value key="deps">senaite-lims-jquery</value>
    <value key="css">++resource++senaite.core.static/bootstrap/css/bootstrap.min.css</value>
  </records>

  <!-- Bundles -->
  <records prefix="plone.bundles/senaite-lims-jquery"
           interface="Products.CMFPlone.interfaces.IBundleRegistry">
    <value key="resources">
      <element>senaite-lims-jquery</element>
    </value>
    <value key="jscompilation">++resource++senaite.core.static/jquery/jquery-2.2.4.min.js</value>
    <value key="csscompilation"></value>
    <value key="enabled">True</value>
    <value key="compile">False</value>
    <value key="merge_with">default</value>
    <value key="last_compilation">2019-10-28 00:00:00</value>
  </records>

  <records prefix="plone.bundles/senaite-lims-jquery-migrate"
           interface="Products.CMFPlone.interfaces.IBundleRegistry">
    <value key="resources">
      <element>senaite-lims-jquery</element>
    </value>
    <value key="jscompilation">++resource++senaite.core.static/jquery/jquery-migrate-1.4.1.min.js</value>
    <value key="csscompilation"></value>
    <value key="enabled">True</value>
    <value key="compile">False</value>
    <value key="merge_with">default</value>
    <value key="last_compilation">2019-10-28 00:00:00</value>
  </records>

  <records prefix="plone.bundles/senaite-lims-jquery-bootstrap"
           interface="Products.CMFPlone.interfaces.IBundleRegistry">
    <value key="resources">
      <element>senaite-lims-bootstrap</element>
    </value>
    <value key="depends">senaite-lims-jquery</value>
    <value key="depends">senaite-lims-jquery-migrate</value>
    <value key="depends">senaite-lims-bootstrap</value>
    <value key="jscompilation">++resource++senaite.core.static/bootstrap/js/bootstrap.min.js</value>
    <value key="csscompilation">++resource++senaite.core.static/bootstrap/css/bootstrap.min.css</value>
    <value key="enabled">True</value>
    <value key="compile">False</value>
    <value key="merge_with">default</value>
    <value key="last_compilation">2019-10-28 00:00:00</value>
  </records>

</registry>
